<?xml version="1.0" encoding="UTF-8"?>
<project name="mparticle-custom">

    <target name="-pre-clean">
        <delete dir="doc" verbose="${verbose}" />
    </target>

    <target name="-post-build"  depends="copyjar, docs"/>

    <target name="copyjar">
        <copy file="bin/classes.jar" tofile="bin/mparticle-0.1.jar" verbose="true" />
    </target>

    <target name="docs">
        <javadoc packagenames="com.mparticle"
            sourcepath="src"
            defaultexcludes="yes"
            destdir="doc"
            author="false"
            version="true"
            linkoffline="http://developer.android.com/reference ${sdk.dir}/docs/reference"
            use="true">
            <classpath>
                <path path="${javac.classpath}" />
                <path path="${sdk.dir}/platforms/${target}/android.jar" />
            </classpath>
        </javadoc>
    </target>

</project>
