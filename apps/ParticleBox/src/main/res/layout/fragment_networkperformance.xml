<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Request testing"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Url"
                android:text="http://www.example.com"
                android:id="@+id/url1"
                android:singleLine="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="5dp" />
            <CheckBox
                android:layout_width="wrap_content" android:id="@+id/postCheckBox"
                android:layout_height="wrap_content" android:text="POST" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="HttpUrlConnection"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_height="50dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="HttpClient"
                    android:id="@+id/button1"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Configuration testing"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL or query substring"
                android:id="@+id/filter"
                android:singleLine="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Exclude URL"
                    android:id="@+id/exluceUrl"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_height="50dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Allow Query"
                    android:id="@+id/allowQuery"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_height="50dp" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:text="Reset"
                android:id="@+id/reset"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_height="50dp" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gray_border"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="Image load testing"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="http://upload.wikimedia.org/wikipedia/en/thumb/7/70/Bob_at_Easel.jpg/250px-Bob_at_Easel.jpg"
                android:hint="Image Url"
                android:id="@+id/imageUrl"
                android:singleLine="true" />

            <View
                android:layout_width="1dp"
                android:layout_height="5dp" />


            <Button
                android:layout_width="match_parent"
                android:text="Load Image Url"
                android:id="@+id/loadImage"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:layout_height="50dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="5dp" />
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>